                <note xml:id="tnote.n5">1.3 as distinctly … faulty 1.4] <hi rend="italic">interl</hi> </note>
                <note xml:id="tnote.n6">1.5 remember] <hi rend="italic">interl</hi> </note>
                <note xml:id="tnote.n7">2.1 my … fallacious] <hi rend="italic">above del</hi> ‘you received no letter from me’ </note>
