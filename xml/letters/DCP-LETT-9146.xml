                <note xml:id="tnote.n6">11.1 there] <hi rend="italic">interl</hi> </note>
                <note xml:id="tnote.n7">11.2 one)] <hi rend="italic"> parenthesis over colon</hi> </note>
                <note xml:id="tnote.n8">12.2 of E. globulus] <hi rend="italic">interl</hi> </note>
                <note xml:id="tnote.n9">12.2 the] <hi rend="italic">interl</hi> </note>
            </div>

            
            
            
            
            
            
            
            
            
            
            
            
            
            
            
