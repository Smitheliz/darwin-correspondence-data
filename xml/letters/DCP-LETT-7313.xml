        <div type="letter">
            <div type="text">
                <opener>
                    <date>Sept 1st, 1870</date>
                </opener>
                <div type="transcription">
                     
<table>
        <row>
            <cell rend="left" cols="4"><hi rend="underline">Statement of Sales of</hi> Darwin Origin of Species <hi rend="underline">to</hi> Sept <hi rend="underline">1st, 18</hi>70 <hi rend="underline">By D. Appleton &amp; Co.</hi></cell>
        </row>
        <row>
            <cell rend="left borderBottom" cols="4"><hi rend="underline">for account of</hi> Asa Gray<ref target="#foot.f1"/></cell>
        </row>
        <row>
            <cell cols="4"/>
        </row>
        <row>
            <cell rend="borderTop" cols="4"/>
        </row>
        <row>
            <cell rend="right borderTop"><hi rend="underline"> On hand last account,</hi></cell>
            <cell rend="right borderTop borderSides">433</cell>
            <cell rend="right borderTop"><hi rend="underline">On hand this date,</hi></cell>
            <cell rend="right borderTop borderSides">521</cell>
        </row>
        <row>
            <cell rend="right"><hi rend="underline">Printed since,</hi></cell>
            <cell rend="right borderSides">500</cell>
            <cell rend="right"><hi rend="underline">Given away</hi></cell>
            <cell rend="right borderSides"/>
        </row>
        <row>
            <cell rend="right"/>
            <cell rend="right borderSides"/>
            <cell rend="right"><hi rend="underline">Sold to date,</hi></cell>
            <cell rend="right borderSides">412</cell>
        </row>
        <row>
            <cell rend="right"/>
            <cell rend="right borderAll">933</cell>
            <cell rend="right"/>
            <cell rend="right borderAll">933</cell>
        </row>
        <row>
            <cell rend="left" cols="2"><hi rend="underline">Sold</hi> 412 <hi rend="underline">Copies</hi> @ 2<hi rend="superscript">50</hi> <hi rend="underline">Rate</hi> 5%</cell>
            <cell rend="right"/>
            <cell rend="right">$51.50</cell>
        </row>
        <row>
            <cell rend="left" cols="2">Febry 1/70 Balance</cell>
            <cell rend="right"/>
            <cell rend="right">298.99</cell>
        </row>
        <row>
            <cell rend="left" cols="2">Balance Sept/70</cell>
            <cell rend="right"/>
            <cell rend="right">350.49</cell>
        </row>
        <row>
            <cell rend="left" cols="2">Value in Sterling</cell>
            <cell rend="right"/>
            <cell rend="right"/>
        </row>
        <row>
            <cell rend="left" cols="2">Exch @ 110 <formula><math xmlns="http://www.w3.org/1998/Math/MathML"><mfrac><mn>5</mn><mn>8</mn></mfrac></math></formula> Gold 117<formula><math xmlns="http://www.w3.org/1998/Math/MathML"><mfrac><mn>1</mn><mn>2</mn></mfrac></math></formula></cell>
            <cell rend="right"/>
            <cell rend="right">£ 62.5.2</cell>
        </row>    
    </table>
 

                </div>
            </div>
               
