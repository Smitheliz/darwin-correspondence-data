                    <note xml:id="tnote.n3">2.3 should] <hi rend="italic">after del</hi> <hi rend="italic">illeg</hi></note>
                    <note xml:id="tnote.n4">2.4 , as] <hi rend="italic">interl after del</hi> ‘from what’</note>
                    <note xml:id="tnote.n5">2.4 them,] <hi rend="italic">interl</hi></note>
