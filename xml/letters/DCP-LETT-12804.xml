                <note xml:id="tnote.n3">1.3 reviews] <hi rend="italic">after del</hi> ‘with’ </note>
                <note xml:id="tnote.n4">1.4 65] <hi rend="italic">interl</hi> </note>
                <note xml:id="tnote.n5">2.1 for foreigners 2.2] <hi rend="italic">interl</hi> </note>
                <note xml:id="tnote.n6">2.2 (for … <hi rend="italic">cut</hi>)] <hi rend="italic">square brackets</hi> <hi rend="italic">in ms</hi> </note>
                <note xml:id="tnote.n7">2.2 (<hi rend="print">65</hi>)] <hi rend="italic">underl red crayon</hi></note>
                <note xml:id="tnote.n8">4.3 , &amp; … delay.] <hi rend="italic">interl</hi> </note>
