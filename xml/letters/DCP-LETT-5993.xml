                <note xml:id="tnote.n3">1.2 which has just passed;] <hi rend="italic">interl pencil</hi> </note>
                <note xml:id="tnote.n4">1.2 from you] <hi rend="italic">interl</hi> </note>
                <note xml:id="tnote.n5">1.3 heard of] <hi rend="italic">above del</hi> ‘found’ </note>
                <note xml:id="tnote.n6">1.4 Horace] <hi rend="italic">after del caret</hi> </note>
