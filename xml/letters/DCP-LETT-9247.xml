                <note xml:id="tnote.n5">1.5 my … in] <hi rend="italic">interl; encircled</hi> </note>
                <note xml:id="tnote.n6">1.7 on both sides] <hi rend="italic">interl</hi> </note>
                <note xml:id="tnote.n7">1.8 these] <hi rend="italic">interl</hi> </note>
