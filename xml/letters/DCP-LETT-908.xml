                    <note xml:id="tnote.n2">2.2 St.; as] <hi rend="italic">semicolon added</hi>; ‘as’ <hi rend="italic">over</hi> ‘—’</note>
                    <note xml:id="tnote.n3">3.1 my Bookseller &amp; <hi rend="italic">Binder</hi> 3.2] <hi rend="italic">interl</hi></note>
